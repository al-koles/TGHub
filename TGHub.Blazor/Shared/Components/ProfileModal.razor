@using TGHub.Application.Resources
@using TGHub.Domain.Entities
@using TGHub.Application
@inject IStringLocalizer<UiStrings> UiStringsLoc

@if (!string.IsNullOrEmpty(User.PhotoUrl))
{
    <img src="@User.PhotoUrl"
         alt="@User.FirstName?.FirstOrDefault()"
         class="w-12 h-12 rounded-full background"/>
}
<div class="mt-3">
    <label class="font-bold">
        @UiStringsLoc[UiStrings.FirstName]:
    </label>
    @User.FirstName
</div>
<div class="mt-3">
    <label class="font-bold">
        @UiStringsLoc[UiStrings.LastName]:
    </label>
    @User.LastName
</div>
<div class="mt-3">
    <label class="font-bold">
        @UiStringsLoc[UiStrings.Username]:
    </label>
    <a href="@Constants.TgBaseUrl/@User.UserName" target="_blank">
        @@@User.UserName
    </a>
</div>

@code {

    [Parameter]
    public TgHubUser User { get; set; } = new();

}