@using TGHub.Blazor.Shared.Components.Calendar.Models
@using System.Globalization
<div class="relative h-full w-full">
    <div class="p-2 absolute w-full h-full top-0 left-0 overflow-y-auto overflow-x-hidden">
        <div class="text-center">
            @Date.Day
            @if (Date.Day == 1)
            {
                <span> (@(CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Date.Month)))</span>
            }
        </div>
        <div>
            @foreach (var calendarEvent in Events)
            {
                <CalendarEvent Event="@calendarEvent"/>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public DateTime Date { get; set; }

    [Parameter]
    public List<CalendarEventModel> Events { get; set; } = new();

}