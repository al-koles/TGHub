@using TGHub.Application.Resources
@using TGHub.Blazor.Resources
@using Blazored.SessionStorage
@using TGHub.Application.Common.SessionStorage
@inject IStringLocalizer<UiStrings> UiStringsLoc
@inject SessionStorageProvider SessionStorageProvider

<nav class="bg-[@ColorStrings.C3]/40 shadow-md">
    <div class="flex items-center justify-between max-w-7xl mx-auto px-4">
        <div class="flex items-center">
            <a href="/" class="flex items-center py-1 px-2 bg-[@ColorStrings.C1]">
                <img class="h-10 w-auto mr-2" src="/icons/logo_icon_and_name.png" alt="Logo">
            </a>
            <ul class="flex flex-wrap items-center ml-4 space-x-4">
                <li>
                    <a href="/channels/@(SessionStorageProvider.SelectedChannelAdministratorData == null ? "" : SessionStorageProvider.SelectedChannelAdministratorData.ChannelId)" class="text-gray-600 hover:text-gray-800">
                        @(SessionStorageProvider.SelectedChannelAdministratorData == null ? UiStringsLoc[UiStrings.Channels] : UiStringsLoc[UiStrings.Channel])
                    </a>
                </li>
                <li>
                    <a href="/lotteries" class="text-gray-600 hover:text-gray-800">
                        @UiStringsLoc[UiStrings.NavLotteries]
                    </a>
                </li>
                <li>
                    <a href="/posts" class="text-gray-600 hover:text-gray-800">
                        @UiStringsLoc[UiStrings.NavPosts]
                    </a>
                </li>
            </ul>
        </div>
        <ChannelSelector SetGlobally="@true" SetFromGlobal="@true"/>
        <div class="flex flex-wrap items-center gap-10">
            <CultureSelector/>
            <div class="flex flex-wrap items-center">
                <a href="/profile" class="text-gray-600 hover:text-gray-800 mr-4">Profile</a>
                <LogoutButton/>
            </div>
        </div>
    </div>
</nav>

