@page "/counter"
@using TGHub.Application.Services.Auth
@using JsonSerializer = System.Text.Json.JsonSerializer
@using TGHub.Blazor.Shared.Components
@using TGHub.Application.Resourses

@attribute [Authorize]

@inject UserSession UserSession
@inject IStringLocalizer<NotificationStrings> NotificationsLocalizer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<p>User: @(UserSessionString())</p>

<p>Current value: @UserSession.FirstName</p>
<EditForm Model="@UserSession">
    <MyInputText @bind-Value="@UserSession.FirstName"/>
</EditForm>

<p>Greeting localized: @NotificationsLocalizer[nameof(NotificationStrings.Greeting)]</p>
<div>
    <CultureSelector/>
</div>

<button @onclick="@(() => throw new Exception())">Throw</button>

@code {

    [CascadingParameter]
    private Task<AuthenticationState>? authStateTask { get; set; }
    
    private int currentCount = 0;
    private string inputString;

    private void IncrementCount()
    {
        currentCount++;
    }

    protected override async Task OnInitializedAsync()
    {
        var tgid = UserSession.TelegramId;
        if (authStateTask is not null)
        {
            var authState = await authStateTask;
            var user = authState.User.Claims.ToList();
        }
    }

    private string UserSessionString()
    {
        return JsonSerializer.Serialize(UserSession);
    }

}
