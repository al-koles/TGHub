@using TGHub.Domain.Entities
<div class="bg-[#ffffff] rounded-xl p-2 hover:-translate-y-0.5 hover:drop-shadow-md hover:bg-gray-100 cursor-pointer"
     @onclick="@ShowChannelModalAsync">
    <div class="text-lg font bold">
        @Channel.Name
    </div>
</div>

@code {

    [CascadingParameter]
    private IModalService ModalService { get; set; } = null!;

    [Parameter]
    public Channel Channel { get; set; } = new();

    private async Task ShowChannelModalAsync()
    {
        var modal = ModalService.Show<ChannelModal>(Channel.Name, new ModalParameters
        {
            { nameof(ChannelModal.Channel), Channel },
            { nameof(ChannelModal.ChannelRefreshed), new EventCallback(this, StateHasChanged) }
        }, new ModalOptions
        {
            Size = ModalSize.Large
        });
        await modal.Result;
        StateHasChanged();
    }

}